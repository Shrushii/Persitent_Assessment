# Server Configuration
PORT=3000
NODE_ENV=development

# LLM Configuration
LLM_API_URL=http://ollama:11434
LLM_MODEL=tinyllama
LLM_MAX_TOKENS=50
LLM_TEMPERATURE=0.7

# Fraud Detection Configuration
FRAUD_CONFIG_PATH=./fraud-config.json

# Risk Thresholds
RISK_BLOCK_THRESHOLD=0.5
RISK_AMOUNT_THRESHOLD=1000
RISK_AMOUNT_INCREMENT=0.3
RISK_DOMAIN_INCREMENT=0.3
RISK_VELOCITY_THRESHOLD=3
RISK_VELOCITY_INCREMENT=0.25
RISK_GEO_MISMATCH_INCREMENT=0.2

# Logging Configuration
LOG_LEVEL=debug

# API Configuration
API_PREFIX=api
SWAGGER_TITLE=Payment Gateway API
SWAGGER_DESCRIPTION=Production-ready payment gateway with fraud detection
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

